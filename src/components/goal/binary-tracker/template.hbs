<div style="display: flex; flex-direction: column; text-align: left; height: 100%;">
    {{#if title}}
        <h1>{{title}}</h1>
    {{/if}}
    
    <div style="display: flex; align-items: center;">
        <div class="current-value" style="font-size: 200%; cursor: pointer; flex: 1;">
            {{#if currentCalculatedValue}}
                {{currentCalculatedValue}}
            {{else}}
                ?
            {{/if}}
        </div>
    
        <div style="flex: 1;">
            {{#if currentCalculatedValueBasis}}
                {{currentCalculatedValueBasis.successCount}} : {{currentCalculatedValueBasis.failureCount}}
            {{/if}}
        </div>

        <div class="todays-entry" style="flex: 1">
            {{#if needTodaysEntry}}
                Today:
                <a href="" data-value="true">yes</a>
                <a href="" data-value="false">no</a>
                {{#if ignoreSkippedDays}}
                    <a href="" data-value="null">ignore</a>
                {{/if}}
            {{/if}}
        </div>
    </div>

    <div class="chart" style="flex: 1"></div>
</div>

<dialog class="history-editor" style="width: 70%; height: 75%; overflow: auto;">
</dialog>