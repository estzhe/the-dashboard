{{#if title}}
    <a href="https://calendar.google.com/calendar/?authuser={{emailAddress}}" class="anchor-header">
        <h1>{{title}}</h1>
    </a>
{{/if}}

{{#each eventsByDate}}
    <h2>{{readable-date date}}</h2>

    {{#each events}}
        <div class="item" title="{{event.description}}">

            <a class="column right" style="flex: 0 0 2rem" href="{{{event.htmlLink}}}">
                {{#if displayOptions.showStartTime}}
                    {{time event.start}}
                {{/if}}
            </a>

            <a class="column center" style="flex: 0 0 1rem" href="{{{event.htmlLink}}}">
                {{#unless displayOptions.showAsFullDay}}
                    —
                {{/unless}}
            </a>

            <a class="column right" style="flex: 0 0 2rem;" href="{{{event.htmlLink}}}">
                {{#if displayOptions.showEndTime}}
                    {{time event.end}}
                {{/if}}
            </a>

            <a class="column"
               style="color: {{{event.color.background}}}; flex: 0 0 0.1rem; margin-left: 0.5rem;"
               title="{{event.calendar.summary}}"
               href="{{{event.htmlLink}}}">
                  〣
            </a>

            <a class="column" style="margin-left: 0.5rem;" href="{{{event.htmlLink}}}">
                {{event.summary}}
            </a>

            {{#if event.videoConferenceUri}}
                <span class="column right" style="flex: 0 0 5rem;">
                    <a href="{{{event.videoConferenceUri}}}">video</a>
                </span>
            {{/if}}
        </div>
    {{else}}
        No events on this date.
    {{/each}}
{{/each}}