<table class="editable-elements-container">
    <tbody>
        {{#each entries}}
            <tr
                data-date="{{date}}"
                {{#if isLastTrackedEntry}} style="border-bottom: 1px solid gray" {{/if}}>
                <td>
                    {{date-wordy date}}
                </td>
                <td>
                    {{#if ../ignoreSkippedDays}}
                        <label>
                            <input
                                type="radio"
                                class="editable-element"
                                name="date-{{date}}"
                                value="true"
                                {{#ifEquals value true}}checked{{/ifEquals}} />
                            yes
                        </label>
                        
                        <label>
                            <input
                                type="radio"
                                class="editable-element"
                                name="date-{{date}}"
                                value="false"
                                {{#ifEquals value false}}checked{{/ifEquals}} />
                            no
                        </label>

                        <label>
                            <input
                                type="radio"
                                class="editable-element"
                                name="date-{{date}}"
                                value="null"
                                {{#ifEquals value undefined}}checked{{/ifEquals}}
                                {{#ifEquals value null}}checked{{/ifEquals}} />
                            ignore
                        </label>
                    {{else}}
                        <input
                            type="checkbox"
                            class="editable-element"
                            {{#if value}}checked{{/if}} />
                    {{/if}}
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>