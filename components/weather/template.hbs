<div style="width: 100%;">
    <canvas class="temperature" style="width: 100%; display: block;" height="30"></canvas>
    <canvas class="clouds" style="width: 100%; display: block;" height="30"></canvas>
    <canvas class="rain-and-snow" style="width: 100%; display: block;" height="30"></canvas>

    <div style="display: flex; width: 100%; font-size: 80%">
        {{#each .}}
            <span style="flex: 1 0; {{#if isFirstHourOfTheDay}}font-weight: bold;{{/if}} {{#if isCurrentHour}}border-bottom: 1px dotted black;{{/if}}">
                {{displayTime}}
            </span>
        {{/each}}
    </div>
</div>
