<div style="display: flex; width: 15em; flex-wrap: wrap;">
    <div class="item today-button {{#if isTodaySelected}}selected{{/if}}" style="flex: 0 0 100%; cursor: pointer; {{#if isTodaySelected}}border: 2px dotted #737373;{{/if}}">
        today
    </div>
    
    <div class="item tomorrow-button {{#if isTomorrowSelected}}selected{{/if}}" style="flex: 0 0 100%; cursor: pointer;">
        tomorrow
    </div>

    {{#each weekdays}}
        <div class="item {{#if isSelected}}selected{{/if}}"
             style="flex: 0 0 calc(100%/7); justify-content: center; cursor: pointer; {{#if isToday}}border: 2px dotted #737373; line-height: calc(1.5em - 3px);{{/if}}">
            {{title}}
        </div>
    {{/each}}

    <div class="item choose-date-button" style="flex: 0 0 100%; cursor: pointer; position: relative;">
        calendar
        <input type="date" value="{{selectedDateIso8601}}" />
    </div>

    <div class="item no-date-button" style="flex: 0 0 100%; cursor: pointer;">
        clear
    </div>
</div>

<style>
    .choose-date-button input[type=date]
    {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        box-sizing: border-box;
        cursor: pointer;
    }

    .choose-date-button input[type=date]::-webkit-calendar-picker-indicator
    {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
        cursor: pointer;
    }
</style>