{{#if title}}
    <a href="https://app.asana.com/0/{{projectId}}/list" class="anchor-header">
        <h1>{{title}}</h1>
    </a>
{{/if}}

{{#each tasks}}
    <a class="item"
        href="https://app.asana.com/0/{{../projectId}}/{{gid}}/f"
        title="{{notes}}">

        <span class="column {{#ifEquals section 'recently-assigned'}}negative-attention{{/ifEquals}}">
            {{name}}
        </span>

        {{#if due_on}}
            <span class="column {{#if is_past_due}}negative-attention{{/if}} {{#if is_due_today}}positive-attention{{/if}}"
                  style="flex: 0 0 5rem;">
                {{readable-date due_on}}
            </span>
        {{/if}}
    
    </a>
{{else}}
    No tasks for today!
{{/each}}
